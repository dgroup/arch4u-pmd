<test-data
    xmlns="http://pmd.sourceforge.net/rule-tests"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests https://pmd.sourceforge.io/rule-tests_1_0_0.xsd">

  <test-code>
    <description>[OK]: Literal node is not a String type</description>
    <expected-problems>0</expected-problems>
    <code><![CDATA[
class Foo {
    int bar = 1;
}
        ]]></code>
  </test-code>

  <test-code>
    <description>[OK]: Literal image length is 0</description>
    <expected-problems>0</expected-problems>
    <code><![CDATA[
class Foo {
    String bar = "";
}
        ]]></code>
  </test-code>

  <test-code>
    <description>[OK]: String literal image does not match the regexp</description>
    <rule-property name="regexPattern">^text$</rule-property>
    <expected-problems>0</expected-problems>
    <code><![CDATA[
class Foo {
    String bar = "text/html";
}
        ]]></code>
  </test-code>

  <test-code>
    <description>[BAD]: prohibited string constant is created </description>
    <expected-problems>1</expected-problems>
    <expected-messages>
      <message>Don't create 'application/json' String constant, use these classes instead: io.micronaut.http.MediaType#APPLICATION_JSON, org.springframework.http.MediaType#APPLICATION_JSON_VALUE, javax.ws.rs.core.MediaType#APPLICATION_JSON</message>
    </expected-messages>
    <code><![CDATA[
class Foo {
    String str = "application/json";
}
        ]]></code>
  </test-code>

  <test-code>
    <description>[BAD]: prohibited strings are created 2 times</description>
    <expected-problems>2</expected-problems>
    <code><![CDATA[
class Foo {
    String str = "application/json";
    String method() {
        return "application/json";
    }
}
        ]]></code>
  </test-code>

</test-data>
